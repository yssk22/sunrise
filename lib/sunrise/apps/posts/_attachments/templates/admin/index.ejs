<div class="posts">
  <article class="span-19" id="posts">
    <h2><%= _("posts.admin") %></h2>
    <div class="pagination">
      <a href="#prev" class="prev"><%= _("posts.previous") %></a>
      <a href="#next" class="next"><%= _("posts.next") %></a>
    </div>
    <%- posts %>
  </article>
  <aside class="span-4 last">
    <div class="content">
      <h3><%= _("posts.menu") %></h3>
      <ul>
        <li><a href="/posts/admin/new" class="ctrl"><%= _("posts.new") %></a></li>
        <li><a href="/posts/admin/" class="ctrl"><%= _("posts.admin") %></a></li>
      </ul>
    </div>
    <div class="content">
      <h3><%= _("posts.archive") %></h3>
      <%- archives %>
    </div>
  </aside>
</div>
