<div class="posts">
  <section class="main">
    <article class="entry permalink">
      <header>
        <h3><%= post.data.title %></h3>
      </header>
      <div class="content">
        <%- markdown(post.data.content) %>
      </div>
      <footer>
        <a href="/posts/<%= post.data._id %>" title="" class="permalink"><%= _("posts.permalink") %></a>
        <%= _("posts.updated_by") %>: <%= post.data.updated_by.userName %>
        <%= php.strftime(_("posts.date_format"), new Date(post.data.updated_at)) %>
      </footer>
    </article>
  </section>
  <aside class="sidebar">
    <div class="content">
      <h3><%= _("posts.menu") %></h3>
      <ul>
        <li><a href="/posts/admin/new" class="ctrl"><%= _("posts.new") %></a></li>
        <li><a href="/posts/admin/" class="ctrl"><%= _("posts.admin") %></a></li>
      </ul>
    </div>
    <div class="content">
      <h3><%= _("posts.archive") %></h3>
      <%- archives %>
    </div>
  </aside>
</div>
