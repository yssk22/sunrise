<div class="posts">
  <section class="span-19 append-1">
    <h2><%= _("posts.new") %></h2>
    <article>
      <div class="content">
        <%- post %>
      </div>
    </article>
  </section>
  <aside class="span-4 last">
    <div class="content">
      <h3><%= _("posts.menu") %></h3>
      <ul>
        <li><a href="/posts/admin/new" class="ctrl"><%= _("posts.new") %></a></li>
        <li><a href="/posts/admin/" class="ctrl"><%= _("posts.admin") %></a></li>
      </ul>
    </div>
    <div class="content">
      <h3><%= _("posts.archive") %></h3>
      <%- archives %>
    </div>
  </aside>
</div>
