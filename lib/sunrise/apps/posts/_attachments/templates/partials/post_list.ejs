<% if( data.total_rows == 0 ){ %>
<%- info(_("posts.not_found")) %>
<% }else if( data.rows.length == 0 ){ %>
<%- info(_("posts.not_found")) %>
<% } %>
<% for(var i in data.rows){ %>
<% var post = data.rows[i].value; %>
<article class="post">
  <header>
    <h3><%= post.title %></h3>
  </header>
  <div class="content">
    <%- markdown(post.content) %>
  </div>
  <footer>
    <a href="/posts/<%= post._id %>" title=""><%= _("posts.permalink") %></a>
    <%= _("posts.updated_by") %>: <%= post.updated_by.userName %>
    <%= php.strftime(_("posts.date_format"), new Date(post.updated_at)) %>
  </footer>
</article>
<% } %>
