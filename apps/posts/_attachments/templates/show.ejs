<% title(post.data.title) %>
<div class="posts">
  <h2 style="display:none"><%= _("posts.permalink") %></h2>
  <div class="main">
    <%- partial('parts/post', {object: post.data, as: this}) %>
  </div>
  <aside class="sidebar">
    <%- partial('parts/menu') %>
  </aside>
</div>
<script type="text/javascript">
  $(function(){
  $('article.post[data-docid="<%= post.data._id %>"]')
  .bind('deleted', function(){
     window.location.href = "<%= url('/') %>";
  });
  });
</script>
