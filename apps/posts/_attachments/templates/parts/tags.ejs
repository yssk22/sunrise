<div class="menu">
  <h3><%= _("posts.sidebar.tags.title") %></h3>
  <% if( this.length > 0 ){ %>
  <ul>
    <% for(var i in this){ %>
    <% var k = this[i].key,
           v = this[i].value; %>
    <li><a href="<%= url('/t/' + encodeURIComponent(k) + '/') %>" 
           class="tag-link"
           title="<%= k %>"><%= k %> (<%= v %>)</a></li>
    <% }; %>
  </ul>
  <% }else{ %>
  <% } %>
</div>
